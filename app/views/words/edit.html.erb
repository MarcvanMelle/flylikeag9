<div class="row">
  <div class="col s8">
    <h2><%= @word.word %></h2>
  </div>
  <div class="col s8">
    <%= form_for :word, method: :patch, url: word_path(@word) do |f| %>

      <%= f.label :definition, class: "new_word_label" %>
      <%= f.text_area :definition, class: "text_area" %>

      <%= f.submit "Update Word", class: "btn" %>
    <% end %>
  </div>
</div>
