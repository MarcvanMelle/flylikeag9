<%= form_for(:user, :url => session_path(:user)) do |f| %>
  <%= f.label :email, "Login-Email" %>
  <%= f.text_field :email %>
  <%= f.label :password, "Login-Password" %>
  <%= f.password_field :password %>
  <%= f.check_box :remember_me %>
  <%= f.label :remember_me %>
  <%= f.submit :sign_in %>
  <%= link_to "Forgot your password?", new_user_password_path(:user) %>
<% end %>
